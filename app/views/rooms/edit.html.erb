<div class="container">
    <div class="row">
        <div class="container mt-5 col-2">
            <div class="card" style="width: 15rem">
                
                <div class="media-body">
                    <%= link_to "Update Photo", "#", class:"text-center m-5" %>
                </div>
                <div class="card-footer">
                    <h5 class="text-center">confirmed</h4>
                </div>
                <div class="col mt-3">
                    <p>Facebook</p>
                </div>
                <div class="col mt-1">
                    <p>Phone Number</p>
                </div>
            </div>
        </div>

        <div class="container mt-4 col-8">

<div class="card">
        <div class="card-header">
        <h5>Create your beautiful place</h5>
        </div>
        <div class="container">
            <%= form_for @room do |f| %>
                <div class="row">
                    <div class="col-3 m-3">
                        <%= f.label :home_type %><br>
                        <%= f.select :home_type, {'Apartment': 'Apartment', 'House': 'House', 'Bed & Breakfast': 'Bed & Breakfast'}, { include_blank: 'Select...'}, {class: 'form-control'} %>
                    </div>

                    <div class="col-3 m-3">
                        <%= f.label :room_type %><br>
                        <%= f.select :room_type, {'Entire': 'Entire', 'Private': 'Private', 'Shared': 'Shared'}, { include_blank: 'Select...'}, {class: 'form-control'} %>
                    </div>

                    <div class="col-3 m-3">
                        <%= f.label :guests %><br>
                        <%= f.select :guest_count, {'1': '1', '2': '2', '3': '3', '4+': '4+'}, { include_blank: 'Select...'}, {class: 'form-control'} %>
                    </div>

                    <div class="col-3 m-3">
                        <%= f.label :bedrooms %><br>
                        <%= f.select :bedroom_count, {'1': '1', '2': '2', '3': '3', '4+': '4+'}, { include_blank: 'Select...'}, {class: 'form-control'} %>
                    </div>

                    <div class="col-3 m-3">
                        <%= f.label :bathrooms %><br>
                        <%= f.select :bathroom_count, {'1': '1', '2': '2', '3': '3', '4+': '4+'}, { include_blank: 'Select...'}, {class: 'form-control'} %>
                    </div>
                    <div class="col-6">
                        <%= f.submit "Create My Room", class:"btn btn-info mt-3 ml-4 mb-3 " %>
                    </div>
                </div>
            <% end %>
        </div>

    </div>

        </div>
    </div>
</div>
