<div class="container">
    <div class="row">
        <div class="col-md-2 m-4">
            <div class="card">
                <div class="card-header text-center">
                    <h4>Edit Profile</h4>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <%= link_to "View Profile","#",class:"btn btn-info mt-2" %>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8 m-4">
            <div class="card">
                <div class="card-header text-center">
                    <h4>Your Profile</h4>
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                        <%= render "users/shared/error_messages", resource: resource %>

                        <div class="field mt-2">
                            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
                        </div>
                        <div class="field mt-4">
                            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder:"Phone Number", class:"form-control" %>
                        </div>
                        <div class="field mt-4">
                            <%= f.text_area :description, autofocus: true, autocomplete: "description", placeholder:"Description", class:"form-control" %>
                        </div>
                        <div class="field mt-4">
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                        </div>

                        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                        <% end %>

                        <div class="field mt-4">
                            <%= f.password_field :password, autocomplete: "new-password", placeholder:"New Password (leave blank if you don't want to change it)", class:"form-control" %>
                            <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                            <% end %>
                        </div>

                        <div class="field mt-4">
                            <%= f.password_field :current_password, autocomplete: "current-password", placeholder:"Current Password", class:"form-control" %>
                            <i>( we need your current password to confirm your changes .) </i>
                        </div>

                        <div class="actions">
                            <%= f.submit "Save", class:"btn btn-info btn-block mt-4" %>
                        </div>

                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>