<h2 class="text-center">Sign up</h2>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "users/shared/error_messages", resource: resource %>

                <div class="field">
                    <%= f.text_field :name, autofocus: true, autocomplete: "name" , placeholder:"Full Name", class:"form-control" %>
                </div>

                <div class="field">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder:"Email", class:"form-control mt-2" %>
                </div>

                <div class="field">
                    <%= f.password_field :password, autocomplete: "new-password" , placeholder:"Password", class:"form-control mt-2" %>
                </div>

                <div class="actions">
                    <%= f.submit "Sign up",class:"btn btn-danger btn-block mt-4" %>
                </div>
            <% end %>
            <div class="mt-3">
                <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path ,class:"btn btn-primary btn-block" %>
            </div>
        </div>
    </div>
</div>