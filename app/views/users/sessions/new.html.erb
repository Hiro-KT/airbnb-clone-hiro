<h2 class="text-center mb-3">Log in</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="field mt-3">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder:"Email", class:"form-control" %>
                </div>

                <div class="field mt-3">
                    <%= f.password_field :password, autocomplete: "current-password" , placeholder:"Password", class:"form-control" %>
                </div>

                <% if devise_mapping.rememberable? %>
                    <div class="field mt-3">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                        <%= render "users/shared/links" %>
                    </div>
                <% end %>

                <div class="actions">
                    <%= f.submit "Log in" , class:"btn btn-danger btn-block mt-4" %>
                </div>
            <% end %>
            <div class="mt-3">
                <%= link_to "Sign in with Facebook", "#" ,class:"btn btn-primary btn-block" %>
            </div>
        </div>
    </div>
</div>